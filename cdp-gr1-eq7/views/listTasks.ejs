<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script defer src="../backend/listTasks.js"></script>
    <meta name="author" content="gr1_eq7" />
    <title>Liste des taches</title>
</head>
<!-- Template pour les tasks :
            <div class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    Titre de la tâche
                </div>
                <p class="mb-1">Courte descrption de la tache.</p>
                <small>Ajouter eventuellement plus d'infos</small>
            <div>
-->

<body>
    <%- include ../views/partials/header.ejs %>
    <div><a class="btn btn-primary" href="./newTask" role="button">Ajouter tache</a></div>
    <span class="justify-content-center">
        <div class="list-group d-inline-flex" id="tasks_todo">
            <p>Taches à faire</p>

            <% taskToDo.forEach(task => { %>
            <a href="#modalInfos<%= task.id%>" data-toggle="modal" data-target="#modalInfos<%= task.id%>"
                class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <%= task.name %>
                </div>
                <p class="mb-1"><%= task.description %></p>
                <small><%= task.state %></small>
            </a>
            <div class="modal fade" id="modalInfos<%= task.id%>" tabindex="-1" role="dialog"
                aria-labelledby="modalInfos<%= task.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitre"><%= task.name %></h5>
                            <small>
                                <p class="text-right"><%= task.state %></p>
                            </small>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p><%= task.description %></p>
                            <p>Temps de réalisation : <%= task.realisation_time %> </p>
                            <p>Définition of done : <%= task.dod %> </p>
                            <p>Date de début : <%= task.start_date %> </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Modifier</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <div class="list-group d-inline-flex" id="tasks_doing">
            <p>Taches en cours</p>
            <% taskDoing.forEach(task => { %>
            <a href="#modalInfos<%= task.id%>" data-toggle="modal" data-target="#modalInfos<%= task.id%>"
                class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <%= task.name %>
                </div>
                <p class="mb-1"><%= task.description %></p>
                <small><%= task.state %></small>
            </a>
            <div class="modal fade" id="modalInfos<%= task.id%>" tabindex="-1" role="dialog"
                aria-labelledby="modalInfos<%= task.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitre"><%= task.name %></h5>
                            <small>
                                <p class="text-right"><%= task.state %></p>
                            </small>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p><%= task.description %></p>
                            <p>Temps de réalisation : <%= task.realisation_time %> </p>
                            <p>Définition of done : <%= task.dod %> </p>
                            <p>Date de début : <%= task.start_date %> </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Modifier</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <div class="list-group d-inline-flex" id="tasks_done">
            <p>Taches terminées</p>
            <% taskDone.forEach(task => { %>
            <a href="#modalInfos<%= task.id%>" data-toggle="modal" data-target="#modalInfos<%= task.id%>"
                class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <%= task.name %>
                </div>
                <p class="mb-1"><%= task.description %></p>
                <small><%= task.state %></small>
            </a>
            <div class="modal fade" id="modalInfos<%= task.id%>" tabindex="-1" role="dialog"
                aria-labelledby="modalInfos<%= task.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitre"><%= task.name %></h5>
                            <small>
                                <p class="text-right"><%= task.state %></p>
                            </small>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p><%= task.description %></p>
                            <p>Temps de réalisation : <%= task.realisation_time %> </p>
                            <p>Définition of done : <%= task.dod %> </p>
                            <p>Date de début : <%= task.start_date %> </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Modifier</button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </span>

</body>

</html>