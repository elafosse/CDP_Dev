<body>
    <%- include partials/header.ejs %>
    <div>
        <div class="row">
            <% include ./projectSidebar %>
            <div class="col-9">
                <a class="btn btn-primary" href="./newTask?projectId=<%=projectId %>" role="button">Ajouter tache</a>
            </div>
            <span class="justify-content-center">
                <div class="list-group d-inline-flex" id="tasks_todo">
                    <p>Taches à faire</p>

                    <% taskToDo.forEach(task => { %> <%- include partials/taskList.ejs %> <%
        }); %>
                </div>

                <div class="list-group d-inline-flex" id="tasks_doing">
                    <p>Taches en cours</p>
                    <% taskDoing.forEach(task => { %> <%- include partials/taskList.ejs %>
                    <% }); %>
                </div>

                <div class="list-group d-inline-flex" id="tasks_done">
                    <p>Taches terminées</p>
                    <% taskDone.forEach(task => { %> <%- include partials/taskList.ejs %> <%
        }); %>
