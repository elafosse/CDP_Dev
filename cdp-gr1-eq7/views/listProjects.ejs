<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script defer src="../backend/listProjects.js"></script>
  <meta name="author" content="gr1_eq7"/>
  <title>Liste de mes projets</title>
</head>

<body>
<%- include ../views/header.ejs %>
  <a type="button" href="/newProject?userName=<%= session.username%>" class="btn btn-success btn-lg">Nouveau Projet</a>
  <h1>Liste de mes projets</h1>
  <ul class="list-unstyled">
    <% listProjects.forEach(project => { %>
      <li><a href="/overviewProject?projectId=<%= project.id %>" ><%= project.name %></a>
        <% if (session.username == project.admin) { %>
          <form action="/removeProject" method="post">
            <input type="text" name="projectId" class="form-control" id="name" value="<%= project.id %>" hidden>
            <button type="submit" class="btn btn-primary" formaction="/removeProject">Supprimer</button>
          </form>
        <% } %>
      </li>
    <% }); %>
  </ul>
</body>
</html>