<a href="#modalInfos<%= task.taskId%>" data-toggle="modal" data-target="#modalInfos<%= task.taskId%>"
    class="list-group-item list-group-item-action flex-column align-items-start">
    <div class="d-flex w-100 justify-content-between">
        <%= task.name %>
    </div>
    <p class="mb-1"><%= task.description %></p>
    <small><%= task.state %></small>
</a>
<div class="modal fade" id="modalInfos<%= task.taskId%>" tabindex="-1" role="dialog"
    aria-labelledby="modalInfos<%= task.taskId %>" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitre"><%= task.name %></h5>
                <small>
                    <p class="text-right"><%= task.state %></p>
                </small>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><%= task.description %></p>
                <p>Temps de réalisation : <%= task.realisation_time %> </p>
                <p>Définition of done : <%= task.dod %> </p>
                <p>Date de début : <%= task.start_date %> </p>
            </div>
            <div class="modal-footer">
                <form action="/removeTask?projectId=<%= projectId%>&taskId=<%= task.taskId %>" method="post">
                    <input type="text" name="taskId" class="form-control" id="name" value="<%= task.taskId %>" hidden>
                    <button type="submit" class="btn btn-primary" formaction="/removetask?projectId=<%= projectId%>&taskId=<%= task.taskId %>">Supprimer</button>
                </form>
                <button type="button" class="btn btn-primary">Modifier</button>
            </div>
        </div>
    </div>
</div>